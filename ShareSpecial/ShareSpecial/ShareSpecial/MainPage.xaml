<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ShareSpecial"
             x:Class="ShareSpecial.MainPage">

  <StackLayout>

    <ListView x:Name="SpecialList" ItemsSource="{Binding PostSpecials}"
              ItemTapped="OnItemTapped"
              SeparatorVisibility="Default" RowHeight="50" SeparatorColor="Purple">
      <ListView.Header>
        <StackLayout Orientation="Horizontal">
          <Label Text="Specials"
          TextColor="Olive"
          BackgroundColor="Red" />
        </StackLayout>
      </ListView.Header>
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Details}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

    <Button Text="These buttons" Style="{StaticResource buttonStyle}" />

  </StackLayout>
</ContentPage>