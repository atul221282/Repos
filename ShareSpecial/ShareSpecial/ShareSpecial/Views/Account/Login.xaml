<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShareSpecial.Views.Account.Login">

  <StackLayout VerticalOptions="Center">
    
    <Entry x:Name="enToken" Placeholder="Email" Text="{Binding Token}">
    </Entry>
    <Entry x:Name="enEmail" Placeholder="Email" Text="{Binding Email}">
    </Entry>
    <Entry x:Name="enPassword" Placeholder="Password" Text="{Binding Password}"></Entry>
    <Button Text="Login" FontSize="20" HorizontalOptions="CenterAndExpand"
                Clicked="btnLogin_OnClickedAsync" x:Name="btnLogin"></Button>
    <Button Text="Get Post" FontSize="20" HorizontalOptions="CenterAndExpand"
                Clicked="btnGetPost_OnClickedAsync" x:Name="btnGetPost"></Button>
  </StackLayout>

</ContentPage>